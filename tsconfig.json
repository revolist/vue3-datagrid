{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "isolatedModules": true,
    "paths": {
      "@revolist/vue-datagrid": ["src/vgrid"]
    }
  },
  "include": [
    "src",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
